# Computing PI with Leibniz formula for Ï€

include "stdio.fd"

Max = 10000000
double pi = 0.0

for i = 0, i < Max, i++
    double denominator = 2.0 * (double from i) + 1.0
    if i % 2 != 0
        pi -= 1.0 / denominator
    else
        pi += 1.0 / denominator
    ;
;

pi *= 4.0
io.print("PI: ")
io.println(pi)
